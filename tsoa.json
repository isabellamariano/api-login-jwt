{
    "entryFile": "src/app.ts",
    "controllerPathGlobs": [
        "src/**/*.controller.ts"
    ],
    "spec": {
        "outputDirectory": "dist",
        "specVersion": 3,
        "noImplicitAdditionalProperties": "throw-on-extras",
        "description": "API JWT usando Express",
        "version": "1.0.0",
        "securityDefinitions": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            },
            "apiKeyHeader": {
                "type": "apiKey",
                "in": "header",
                "name": "x-service-key"
            }
        }
    }
}